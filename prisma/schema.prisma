generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model Suggestion {
  id    Int             @id @default(autoincrement())
  name  String          @db.VarChar(50)
  text  String
  image String
}

model Moon {
  id Int @id @default(autoincrement())
  url String
  logoUrl String
  title String
  content String
  planet Planet     @relation(fields: [planetId], references: [id], onDelete: Cascade)
  planetId  Int
}

model Planet {
  id    Int       @id @default(autoincrement())
  url String
  logoUrl String
  title String
  subTitle String
  color String
  content String
  size  Float
  moons Moon[]
  system System   @relation(fields: [systemId], references: [id], onDelete: Cascade)
  systemId Int
}

model System {
  id    Int       @id @default(autoincrement())
  name  String
  planets Planet[]
}
